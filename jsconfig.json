{
  "typeAcquisition": {
    "include": [
      "three"
    ]
  },
  "compilerOptions": {
    "target": "es6",
    "module": "es6",
    "baseUrl": ".",
    "resolveJsonModule": true,
    "paths": {
      "#": [
        "./src"
      ],
      "#blocks": [
        "./src/blocks"
      ],
      "#elements": [
        "./src/elements"
      ],
      "#instances": [
        "./src/instances"
      ],
      "#geometries": [
        "./src/geometries"
      ],
      "#materials": [
        "./src/materials"
      ],
      "#colors": [
        "./src/colors"
      ],
      "#tools": [
        "./src/tools"
      ]
    }
  },
  "exclude": [
    "node_modules"
  ]
}
